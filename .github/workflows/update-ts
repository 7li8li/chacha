name: update-ts
on:
  push:
    paths:
      - 'previous_config.env'
      - 'iptvts.m3u'
jobs:
  update:
    runs-on: ubuntu-latest
    steps:
      - name: Clone Repository
        uses: actions/checkout@v2

      - name: Load Previous Parameters
        run: source previous_config.env # Load OLD_PARAM values

      - name: Update IPTV List
        run: |
          sed -i "s|jestyayin935.com|$OLD_PARAM1|g" iptvts.m3u
          sed -i "s|bbb.mevzuhls30.cfd|$OLD_PARAM2|g" iptvts.m3u
          sed -i "s|trgoals1281.xyz|$OLD_PARAM3|g" iptvts.m3u
          sed -i "s|h0.7fdc5a6527bc3dd5.workers.dev|$OLD_PARAM4|g" iptvts.m3u

      - name: Commit and Push Updates
        run: |
          git config --global user.name "GitHub Actions"
          git config --global user.email "actions@github.com"
          git add iptvts.m3u
          git commit -m "Auto update: IPTV list updated"
          git push